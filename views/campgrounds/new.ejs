<% include ../partials/header %>
    <div class="container">
        <div class="row">
        <div class="col-sm-12" id="form">
            <h3> Create a New Campgrounds </h3>
            <div class="form-wrap">
                 <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Enter the Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="imageUrl" placeholder="Enter image Url">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="5" cols="44" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit">
                    </div>
                </form>
                 <a href="/campgrounds"> Go Back</a>
            </div>
           
        </div>
        </div>
    </div>
   
<% include ../partials/footer %>